@model DeSchakel.Client.Mvc.Viewmodels.EventListViewModel

@if (Model.Events.Count() == 0)
{
    <div class="bg-info">Geen voostellingen gevonden.</div>
}
else
{
    <div class="row">
        @foreach (var e in Model.Events)
        {
            <div class="col-md-2 mb-3" height="18 rem">
                <div class="card">
                    <div class="card-body h-75">
                        <h5 class="card-title">@e.Title</h5>
                        <a asp-area="Staff" asp-controller="Staff" asp-action="Details" asp-route-id="@e.Id">
                            <img src="@e.Imagestring" alt="@e.Title" width="100" height="100" />
                        </a>
                        <div>@e.EventDate.ToString("dd-MM-yyyy HH-mm") </div>
                        <div class="text-black">@e.LocationName</div>
                        <div class="text-info">@e.CompanyName</div>
                    </div>
                    <div class="card-footer">
                        @* <div class="btn-group">
                            <div class="row"> *@
                        <form asp-action="ConfirmDeleteEvent" asp-route-id="@e.Id" height="25" method="post">
                            <a asp-area="Staff" asp-action="UpdateEvent" asp-controller="Staff" asp-route-id="@e.Id"
                               class="btn btn-sm btn-primary" height="25">Wijzig</a>
                            <button type="submit" class="btn btn-sm btn-outline-danger">Verwijder</button>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
}