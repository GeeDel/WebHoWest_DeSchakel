<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Personeel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Home" asp-controller="Home" asp-action="Index">
                    <img src="~/images/DeSchakel.jpg" height="75" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <ul class="navbar-nav flex-grow-1">
                            @* aanroep naar viewcomponent*@
                            @if (Context.User.Identity.IsAuthenticated && !User.IsInRole("Bezoeker"))
                            {
                                @await Component.InvokeAsync("NavigationLinks", "Staff");

                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="Staff" asp-controller="Staff" asp-action="">Rollen</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="Staff" asp-controller="Staff" asp-action="Accounts">Accounts</a>
                                    </li>
                                }
                            }
                        </ul>
                    </ul>
                    <ul class="navbar-collapse navbar-right">
                        <li class="nav-item position-relative" style="list-style-type:none">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                @User.Claims.FirstOrDefault(u => u.Type == "Name")?.Value;

                                <a class="btn btn-primary"
                                   asp-area="User" asp-controller="Authentication" asp-action="Logout">Meld af</a>
                            }


                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DeSchakel.Client.Mvc - <a asp-area="Home" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/EventScript.js"></script>

    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>
