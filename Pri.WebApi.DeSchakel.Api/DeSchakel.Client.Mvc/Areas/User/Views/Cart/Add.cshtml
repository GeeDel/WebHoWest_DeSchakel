@model CartAddViewModel

<form asp-controller="Cart" asp-action="Add" method="post">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h3 class="card-title">In winkelwagen</h3>
            <div class="form-group">
                </input>
                <div class="form-group">
                    <input hidden asp-for="@Model.CartItem.Title" class="form-control">
                    <h6 asp-for="CartItem.Title" class="card-subtitle mb-2 text-muted form-control">@Model.CartItem.Title</h6>
                </div>
                <div class="form-group">
                    <input disabled asp-for="@Model.CartItem.Price" class="form-control disabled">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CartItem.Quantity"> Gewenst aantal: </label>
                    <input type="number" asp-for="@Model.CartItem.Quantity" class="form-control" />
                    <span asp-validation-for="@Model.CartItem.Quantity" class="text-danger"></span>
                </div>

                <button type="submit" class="mt-1 badge text-decoration-none rounded-pill bg-primary">In winkelwagen</button>
            </div>
        </div>
</form>
<div>
    <a asp-controller="Home" asp-action="Index" asp-area="Home" class="mt-3 badge text-decoration-none rounded-pill bg-primary">Terug</a>

</div>
