@model EventListViewModel

<div class="content">

        <nav id="likeList">
            <header>Terug naar</header>
        </nav>
    
    <section id="performanceList">
        <header>
            Agenda
            <div hight="55%">
                <form class="d-flex">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="btn btn-outline-dark" type="submit">Alle</a>
                    @* aanroep naar viewcomponent*@  @await Component.InvokeAsync("GenreList", "Home")
                </form>
            </div>
        </header>

        @foreach (var performance in Model.Events)
        {
            <section id="@performance.Id" class="performance position-relative">
                <div class="onthoud"></div>
                <table>
                    <tr>
                        <th colspan="2" align="center">
                            <h3>
                                @performance.Title
                                <a class="ms-5 badge text-decoration-none rounded-pill bg-primary"
                                   asp-area="User" asp-controller="Cart" asp-action="Add" asp-route-id="@performance.Id">
                                    Ticket
                                </a>
                                <div class="bladwijzerLink"></div>
                            </h3>
                            <h4>Op: @performance.EventDate.ToString("dd-MM-yyyy") om @performance.EventDate.ToString("HH:mm")</h4>
                            <div>
                                <h5>Van: @performance.CompanyName</h5>
                            </div>
                            <div>
                                <h5 class="alert-danger">Waar: @performance.LocationName</h5>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <td colspan="2" align="left">
                            @performance.Description
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" align="left">

                            @if (performance.Genres.Count() != 0)
                            {
                                <div>
                                    <h5>
                                        Genre(s):

                                        @foreach (var genre in performance.Genres)
                                        {
                                            <span margin-right="20px" font-size="0.8em"> &#9826; @genre.Name</span>
                                        }
                                    </h5>

                                </div>}
                          </td>
                    </tr>
                    <tr>
                        <td width="80%" class="align-content-lg-start">

                            <!-- Nav tabs -->
                            <!-- https://getbootstrap.com/docs/5.0/components/navs-tabs/  -->
                            <ul class="nav nav-pills" id="myTab" @performance.Id role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#@(performance.Title)_home" type="button" role="tab" aria-controls="home" aria-selected="true">Voorstelling</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#@(performance.Title)_profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Video</button>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade show active " id="@(performance.Title)_home" role="tabpanel" aria-labelledby="home-tab">
                                    <img src="@performance.Imagestring" alt="Afbeelding van @performance.Title" alt="@performance.Title" height="320"
                                         class="performanceImage" />
                                    <audio controls>
                                        Formaat wordt niet ondersteund.
                                    </audio>
                                </div>
                                <div class="tab-pane" id="@(performance.Title)_profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <video width="320" height="240" controls>
                                        <source src="movie.mp4" type="video/mp4">
                                        <source src="movie.ogg" type="video/ogg">
                                        Your browser does not support the video tag.
                                    </video>  
                                </div>


                            </div>
                        </td>
                    </tr>

                </table>

            </section>
        }
    </section>

</div>